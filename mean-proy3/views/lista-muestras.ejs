    <script type="text/javascript">
        $(document).ready(function() {
            $.getJSON("muestras/todos", function(data) {
                console.log(data);
                $(data).each(function(key, muestra) {
                    var $btn = $('<a class="btn btn-default btn-xs">Responder</a>');
                    $btn.attr('href', 'muestras/' + muestra._id);
                    var $tr = $("<tr>");
                    $tr.append($('<td>').text(muestra.cod_barras).attr('id', 'cod_barras'))
                        .append($('<td>').text(muestra.estado).attr('id', 'estado'))
                        .append($('<td>').text(muestra.tipo).attr('id', 'tipo'))
                        .append($('<td>').text(muestra.lab_asignado).attr('id', 'lab_asignado'))
                        .append($('<td>').html($btn));

                    $("#tabla").append($tr);
                });
                $("#table").DataTable();

            })
            $(document).on('click', 'a.btn.btn-default', function(event) {
                event.preventDefault();
                /* Act on the event */
                $("#tabla1").hide();
                $("#muestra").show();
                var $row = $(this).parent().parent();
                // console.log($row.html());
                var cod = $row.children('td#cod_barras').text();
                var estado = $row.children('td#estado').text();
                var lab = $row.children('td#lab_asignado').text();
                var tipo = $row.children('td#tipo').text();
                $("input#cod_barras").val(cod);
                $("input#estado").val(estado);
                $("input#tipo").val(tipo);
                $("input#lab").val(lab);
            });;
        });
    </script>

